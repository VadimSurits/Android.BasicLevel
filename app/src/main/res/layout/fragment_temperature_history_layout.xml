<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_temperature_history">

    <TextView
        android:id="@+id/ForecastDaysTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textColor="#E81123"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="someText"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/ForecastDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"

        android:textSize="20sp"
        android:text="Какой-то прогноз погоды! Очень странно, что этот текст одновременно и скроллится, и остается на экране как в обычном TextView"
        android:textAlignment="center"
        android:textColor="#F44336"
        app:layout_constraintTop_toBottomOf="@+id/ForecastDaysTextView"
        app:layout_goneMarginEnd="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
